<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Go Digitalâ„¢</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
            </ul>
            <div class="d-flex align-items-center justify-content-between">
              <a class="nav-link active" aria-current="username" href="#"
                ><i class="fa-solid fa-user me-2"></i>Admin</a
              >
              <form action="/signout" method="POST">
                <button class="btn btn-outline-success ms-2" type="submit">
                  Sign Out
                </button>
              </form>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container my-5">
        <div class="text-center">
          <h1 class="mt-2 mb-4">Development Team</h1>
        </div>
        <div class="row mt-2">
          <% data.forEach((person) => { %>
          <div class="col mb-2 d-flex justify-content-center">
            <div class="card text-center" style="width: 18rem">
              <img
                src="<%= person.imageUrl %>"
                alt="<%= person.name %> -photo"
                class="card-img-top"
              />
              <div class="card-body">
                <h5 class="card-title"><%= person.name %></h5>
                <p class="card-text"><%= person.role %></p>
                <p class="card-text">Project: <%= person.project %></p>
                <a href="#" class="btn btn-primary">Details</a>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>
    <script
      src="https://kit.fontawesome.com/e913df8632.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
